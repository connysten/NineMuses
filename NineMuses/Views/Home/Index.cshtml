@using NineMuses.ViewModels
@model IndexViewModel
@{
    ViewBag.Title = "Nine Muses";
}

<h1 class="gridbox-title">Most Viewed Video</h1>
<div class="gridbox big">

    @foreach (var m in Model.MostViewed)
    {
        <div class="grid-item">
            <a href="@Url.Action("View", "Video", new { id = m.VideoID })">
                <img src="@m.Thumbnail" class="video-thumbnail" />
                <h1 class="video-title ellipsis">@(m.Title)<br /></h1>
            </a>
            <a href="@Url.Action("Profile", "User", new { id = m.UserID })">
                <p class="usertag ellipsis">@(m.GetUserName)</p>
            </a>
        </div>
    }

    @if(Model.MostViewed.Count == 0)
    {
        <h1>No data</h1>
    }

</div>

<h1 class="gridbox-title  mar-20-t">Most Recent Uploads</h1>
<div class="gridbox small">

    @foreach (var m in Model.RecentUploads)
    {
        <div class="grid-item pad-40-r pad-40-l">
            <a href="@Url.Action("View", "Video", new { id = m.VideoID })">
                <img src="@(m.Thumbnail)" class="video-thumbnail" />
                <h1 class="video-title ellipsis">@(m.Title)<br /></h1>
            </a>
            <a href="#">
                <p class="usertag ellipsis">@(m.GetUserName)</p>
            </a>
        </div>
    }

    @if (Model.MostViewed.Count == 0)
    {
        <h1>No data</h1>
    }

</div>

