@using NineMuses.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Sign in</h2>

@using (Html.BeginForm("SignIn", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(m => m.User.Username, new { placeholder = "Username", required = "required" })
    @Html.TextBoxFor(m => m.User.Password, new { placeholder = "Password", type = "password", required = "required" })
    @Html.HiddenFor(m => m.ReturnUrl)
    <input type="submit" />

    @Html.ValidationSummary("", new { @class = "ErrorText" })
}

<a href="@Url.Action("SignUp","User")">Sign Up</a>
